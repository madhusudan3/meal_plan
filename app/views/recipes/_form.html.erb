<% if @errors.present? %>
	<div class="errors">
		<ul>
			<% @errors.each do |error| %>
			<li><%= error %></li>
			<% end %>
		</ul>
	</div>
<% end %>	

<%= form_for @recipe do |form| %>
	<div class="form_group">
		<%= form.label :name %>
		<%= form.text_field :name %>
	</div>

	<div class="form_group">
		<%= form.label :description %>
		<%= form.text_area :description %>
	</div>

	<div class="actions">
		<%= form.submit %>
	</div>
<% end %>